<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    i18n_domain="sparc.login">

    <include package=".crypt" />
    
    <adapter
        provides=".IPasswordHashToken"
        for="sparc.login.credentials.ICredentialIdentity"
        factory=".password.MemoryPasswordHashToken"
        />
    
    <utility
        name="sparc.login.password"
        component=".password.PasswordTokenFactory"
        />

</configure>